{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    //"baseUrl": "./src",
    "pretty": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
